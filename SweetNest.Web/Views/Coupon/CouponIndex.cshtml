@using System.Globalization
@model IEnumerable<CouponDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">優惠卷列表</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a  asp-controller="Coupon" asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i>新增優惠卷</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						優惠券代碼
					</th>
					<th>
						折扣金額
					</th>
					<th>
						最低金額
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td>@item.CouponCode</td>
						<td>@item.DiscountAmount.ToString("C", new CultureInfo("zh-TW"))</td>
						<td>@item.MinAmount.ToString("C", new CultureInfo("zh-TW"))</td>
						<td>
							<a asp-controller="Coupon" asp-action="CouponDelete" asp-route-id="@item.CouponId" class="btn btn-danger">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				}		
			</tbody>
		</table>

	</div>

</div>